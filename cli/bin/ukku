#!/usr/bin/env ruby
require 'docopt'
require 'subprocess'
require 'rye'
require 'rugged'
require 'yaml'
require 'ukku'

doc = <<DOCOPT
Ukku.

Usage:
  ukku configure [-u USER] HOST [NAME]
  ukku run COMMAND...

Arguments:
  HOST                  Domain or IP of your server.
  NAME                  A name for the application.

Options:
  -u USER --user=USER   User used to connect to your server.

DOCOPT

UKKU_FILE = '.ukku.yml'

begin
  # parse args
  args = Docopt::docopt(doc)

  # execute commands
  ConfigureCommand.new.execute(args) if args['configure']
  RunCommand.new.execute(args) if args['run']
rescue Exception => e
  puts "   !   #{e.message}"
  puts e.backtrace.inspect
  exit 1
end